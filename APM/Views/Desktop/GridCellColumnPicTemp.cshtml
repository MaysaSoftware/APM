<input type="text" style="display: none;" id="InputG-C-C-C-B">
<img class="UploadFile_img UploadFile_imgG-C-C-C-B" src="" />
<div class="UploadFile_img UploadFile_imgDivG-C-C-C-B" style="display:none;"></div>
<div class="UploadFile">

 @(Html.Kendo().Upload()
.Name("filesG-C-C-C-B")
.Multiple(false)
.Async(a => a.SaveField("files").Save("Templates_Save", "Attachment", "").AutoUpload(true))
.Events(e=>e.Upload("StartUploadFile").Complete("CompleteUploadFile"))
.Validation(validation =>
{
    validation.AllowedExtensions(new string[] {".png",".jpeg",".jpg"});
    validation.MaxFileSize(24*1024);
    validation.MinFileSize(0);
})
)
</div>