            .Columns(columns =>
            {
                columns.Bound(typeof(long), "شناسه").Title("شناسه").Width(50).Visible(false).EditorTemplateName("InlineString");
                columns.Bound(typeof(long), "پرسنل").Title("پرسنل").Width(50).Visible(false).EditorTemplateName("InlineString");
