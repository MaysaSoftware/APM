            </div>

            <div class="col-sm-2 px-4">
                <div class="switch md-form FormItemInput my-3 input-group" style="min-height:0px;">
                    <label>
                        @(Html.Kendo().Switch()
                        .Name("SharingFood")
                        .Checked(true)
                        .Enabled(true)
                        .ReadOnly(false)
                        .HtmlAttributes(new {style ="Width:60px;"})
                        .Messages(c => c.Checked("").Unchecked(""))
